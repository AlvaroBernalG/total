{
	"name": "total",
	"version": "0.2.2",
	"description": "Expansible cli that computes the stdin",
	"main": "dist/cli.js",
	"bin": "dist/cli.js",
	"scripts": {
		"test": "npm run build && npm run tslint && jest",
		"dev:c:size":
			"find . -name '*.ts' | entr -rs 'tsc && ls *.json | node dist/cli.js --size mb'",
		"dev:c:tp":
			"find . -name '*.ts' | entr -rs 'tsc && echo \"hello\nworld\" | node dist/cli.js --tp '",
		"dev:c:eval":
			"find . -name '*.ts' | entr -rs 'tsc && echo \"hello\nworld\"  | node dist/cli.js --eval \"(s) => s\"'",
		"dev:test": "find . -name '*.ts' | entr -rs 'npm run test '",
		"build": "npm run clean && tsc",
		"clean": "rm -rf ./dist",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"deploy": "npm run test && npm publish"
	},
	"author": {
		"name": "Alvaro Bernal Gimeno",
		"email": "alvaro.bernal.gimeno@gmail.com",
		"website": "https://alvarobg.com"
	},
	"engine": "8.0",
	"license": "M.I.T",
	"dependencies": {
		"commander": "^2.11.0",
		"get-stdin": "^5.0.1",
		"glob": "^7.1.2",
		"module-alias": "^2.0.1"
	},
	"jest": {
		"moduleFileExtensions": ["ts", "js"],
		"transform": {
			"^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
		},
		"testMatch": ["**/test/**/*.test.(ts|js)"],
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@types/commander": "^2.12.2",
		"@types/jest": "^21.1.10",
		"@types/node": "^8.10.12",
		"ava": "^0.22.0",
		"in-between": "^5.2.0",
		"jest": "^21.2.1",
		"ts-jest": "^21.2.4",
		"tslint": "^5.10.0",
		"typescript": "^2.8.3"
	},
	"_moduleAliases": {
		"lib": "./dist/lib"
	},
	"homepage": "https://github.com/alvarobernalg/total.git",
	"bugs": {
		"issues": "https://github.com/alvarobernalg/total/issues"
	}
}
