{
  "name": "total",
  "version": "0.1.4",
  "description": "Expansible cli that computes the stdin",
  "main": "dist/total.js",
  "bin": "dist/total.js",
  "scripts": {
    "test": "npm run build && npm run tslint && jest",
    "dev:c:size": "find . -name '*.ts' | entr -rs 'tsc && ls *.json | node dist/total.js --size mb'",
    "dev:c:word": "find . -name '*.ts' | entr -rs 'tsc && cat total.ts | node dist/total.js -w file'",
    "dev:test": "find . -name '*.ts' | entr -rs 'npm run test '",
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./dist",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
    "deploy": "npm run tslint && npm run test && npm publish"
  },
  "author": {
    "name": "Alvaro Bernal Gimeno",
    "email": "alvaro.bernal.gimeno@gmail.com",
    "website": "https://alvarobg.com"
  },
  "engine": "8.0",
  "license": "M.I.T",
  "dependencies": {
    "commander": "^2.11.0",
    "get-stdin": "^5.0.1",
    "module-alias": "^2.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/commander": "^2.11.0",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "ava": "^0.22.0",
    "in-between": "^5.2.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "_moduleAliases": {
    "lib": "./dist/lib"
  },
  "homepage": "https://github.com/alvarobernalg/total.git",
  "bugs": {
    "issues": "https://github.com/alvarobernalg/total/issues"
  }
}
